<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.homestay_uz">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/home_icon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/home_icon_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">

        <activity android:name=".activities.foods.FoodsActivity" />
        <activity android:name=".activities.history.HistoryActivity" />
        <activity android:name=".activities.modernUzbekistan.ModernUzbekistanActivity" />
        <activity android:name=".activities.musicAndArt.MusicAndArtActivity" />
        <activity android:name=".activities.additional.CallPhone" />
        <activity android:name=".activities.additional.ProfileActivity" />
        <activity android:name=".activities.additional.SearchActivity" />
        <activity android:name=".activities.initial.SignUpActivity" />
        <activity android:name=".activities.initial.SignInActivity" />
        <activity android:name=".activities.base.MainActivity" />
        <activity android:name=".activities.base.BaseActivity" />
        <activity
            android:name=".activities.initial.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>