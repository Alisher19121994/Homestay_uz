<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.homestay_uz">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/home_icon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/home_icon_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:targetApi="31">



        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.BottomMenuProfileActivity" />
        <activity android:name=".activities.Bottom_menu_notifications_Activity" />
        <activity android:name=".activities.Bottom_menu_rent_adds_Activity" />
        <activity android:name=".activities.Bottom_menu_favorite_Activity" />
        <activity android:name=".activities.Bottom_menu_home_Activity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.OnboardingActivity" />
        <activity android:name=".activities.MainActivity" />


        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>