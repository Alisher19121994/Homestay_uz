<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">


    <LinearLayout
        android:id="@+id/linearLayoutHorizontalOfItems_id"
        android:layout_width="100dp"
        android:layout_height="138sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_items_textName_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lists"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/list_items_image_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:elevation="0dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portrait"
            app:shapeAppearanceOverlay="@style/round_corner_shapeableImageView"
            app:strokeColor="#0288D1"
            app:strokeWidth="2dp" />


    </LinearLayout>
</LinearLayout>